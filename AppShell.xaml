<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Ksiegowosc.View;assembly=Ksiegowosc"
       x:Class="Ksiegowosc.AppShell"
       Shell.FlyoutBehavior="Locked">

    <!-- Strona główna -->
    
        <ShellContent
            Route="Main"
            Title="Księgowość"
            ContentTemplate="{DataTemplate local:MainPage}" />

        <!-- Strona z fakturami -->
        <ShellContent
            Route="IssuedInvoices"
            Title="Wystawione faktury"
            ContentTemplate="{DataTemplate local:IssuedInvoicesPage}" />
    
        <ShellContent
            Route="ReceviedInvoices"
            Title="Faktury do opłacenia"
            ContentTemplate="{DataTemplate local:ReceivedInvoicesPage}"
                />

        <ShellContent
            Route="AddInvoice"
            Title="Dodaj fakturę"
            ContentTemplate="{DataTemplate local:AddInvoicePage}"
            
            />
    
        <ShellContent
            Route=""
            Title="Przeglądaj kontrahentów"
    
            />
    
        <ShellContent
            Route=""
            Title="Dodaj kontrahenta"
    
        />




</Shell>