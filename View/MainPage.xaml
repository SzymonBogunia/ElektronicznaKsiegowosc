<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ksiegowosc.MainPage">
    <Grid RowDefinitions="Auto, Auto, Auto, *"
          RowSpacing="20"
          Padding="20">
        <Button Text="Wystawione faktury"
                Command="{Binding ShowIssuedInvoicesCommand}"
                Grid.Row="0" />
        <Button Text="Faktury do opłacenia"
                Command="{Binding ShowPayableInvoicesCommand}"
                Grid.Row="1" />
        <Button Text="Dodaj nową fakturę"
                Command="{Binding AddNewInvoiceCommand}"
                Grid.Row="2" />
    </Grid>
</ContentPage>